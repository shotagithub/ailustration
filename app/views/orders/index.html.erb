<div class = "form_wrapper">
  <div class = "order_items">
    <%= @product.title %>
  </div>
  <div class = "order_price">
    <%= "¥ #{@product.price} 円" %>
  </div>
  <%= render 'shared/error_messages', model: @order %>
  <div class = cards>
    <%= form_with(model: @order, url: product_orders_path(@product), class: 'card_form', id: 'cardForm', local: true) do |f| %>
      <div class='credit_card_form'>
          <h1 class='info_input_haedline'>
            クレジットカード情報入力
          </h1>
          <div class="form_group">
            <div class='form_text_wrap'>
              <label class="form_text">カード情報</label>
              <span class="indispensable">必須</span>
            </div>
            <div id = "card_number" class = "input_default"></div>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">有効期限</label>
              <span class="indispensable">必須</span>
            </div>
            <div class='input-expiration-date-wrap'>
              <div id = "card-exp" class = "input-expiration-date"></div>
            </div>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">セキュリティコード</label>
              <span class="indispensable">必須</span>
            </div>
            <div id = "card-cvc" class= "input-default"></div>
          </div>
        </div>
      </div>
    <% end %>
</div>